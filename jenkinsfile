#!groovy

node { 

	def nodeHome = tool name: 'node-4.4.5', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
    env.PATH = "${nodeHome}/bin:${env.PATH}"
    
	stage('build') {
	    checkout scm
	    sh 'npm install'
	    sh 'npm run build'
	}

	stage('test') {
		sh 'CI=true npm run test'
	}
}